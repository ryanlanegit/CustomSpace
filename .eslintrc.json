{
  "rules": {
    // disable use of undefined variables
    "no-undef": "error",

    // enable console output calls
    // ["log", "warn", "error", "trace"]
    "no-console": [
      "error"
    ],

    // set dangling commas in object definitions
    "comma-dangle": ["error", "always-multiline"],

    // true to allow missing `use strict` pragma
    "sloppy": "false",

    // true to allow unused parameters
		"unparam": "false",

    "strict": ["error", "safe"],

    "browser": "true",

    // JSDoc comments
    "require-jsdoc": ["error", {
      "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true,
          "ArrowFunctionExpression": true,
          "FunctionExpression": true
      }
    }]
  }
}
